{% extends 'base.html.twig' %}

{% block title %}Session {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    
   
</div>
    
    <h1>Acceuil</h1>

<a href="{{ path('add_session')}}"> Ajouter une Session <br><br></a>
    <h2> Session en cours </h2>
   <table>
   <thead>
        <tr>
            <th>Statut </th>
            <th>Session</th>
            <th> Date de début </th>
            <th> Date de fin </th>
            <th> Inscrit </th>
            <th> Actions </th>
            
            
        </tr>
    </thead>
    <tbody>
        <tr>
             {% for sessionactuelles in sessionactuelle %}
            <td><i class="fa-solid fa-bars-progress"></i></td>
            <td><a href="{{ path('show_session', {'id': sessionactuelles.id}) }}">{{ sessionactuelles.nom }}</a></td> 
            <td>{{ sessionactuelles.datestart| date('Y-m-d') }}</td>
            <td>{{ sessionactuelles.dateend | date('Y-m-d')}}</td>
            <td> {{sessionactuelles.PlaceRestante}}/{{sessionactuelles.places}} </td>
            <td><a href="{{ path('delete_session',{'id': sessionactuelles.id}) }}"><i class="fa-solid fa-calendar-xmark"></i></td>
        
        </tr>
        {% endfor %}
    </tbody>
</table>
