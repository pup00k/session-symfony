{% extends 'base.html.twig' %}

{% block title %}Hello StagiaireController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
 
 <h1>{{stagiaire.nom}} {{stagiaire.prenom}}</h1>
<br>
 <h3> Informations </h3>

 <p> Téléphone : {{stagiaire.telephone}}</p>
 <p>Email : {{stagiaire.mail}}</p>
 <p> Date de Naissance : {{stagiaire.born | date('Y-m-d')}} </p>

 <h2> Sessions </h2>

 <table>
    <thead>
        <tr>
            <th>Statut</th>
            <th>Session</th>
            <th>Date de début</th>
            <th>Date de fin</th>
            <th>Inscrit</th>
        </tr>      
    </thead>
    <tbody>
        {% for session in stagiaire.sessions %}
        <tr>
            <td> {% if session.NbPlacesRestante != 0 %}
            <i class="fa-solid fa-door-open"></i>
            {% else %}
                <div class="session "><p>session complète<p></div>
            {% endif %}
            </td> 
            <td>{{session.nom}}</td> 
            <td>{{session.datestart | date('Y-m-d')}}</td>
            <td>{{session.dateend| date('Y-m-d')}}</td>
            <td>{{session.PlaceRestante}}/{{session.places}}</td>
            
        </tr>
        {% endfor %}
         
    </tbody>
</table>
 </table>
 
 </div>
{% endblock %}